<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.myapplication.Notification"
    android:background="@drawable/unnamed">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="with FLAG_ONGOING_EVENT"
        android:id="@+id/button2"
        android:onClick="showNotofication_flag_ongoing_event"
        android:background="#d95252"
        android:textColor="#000000"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" Flag == Priorety importance(it is impossible to close like swype)"
        android:id="@+id/textView4"
        android:textColor="#d95252"
        android:layout_alignTop="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:background="#52d9c9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="With FLAG_INSISTENT"
        android:id="@+id/button4"
        android:onClick="showNotofication_flag_insistent"
        android:layout_below="@+id/textView8"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="A flag that insist to open the notification (because the ringtone is repeated until it is openly notification)"
        android:id="@+id/textView5"
        android:textColor="#52d9c9"
        android:layout_below="@+id/button4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:background="#839136"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My sound"
        android:onClick="showNotofication_my_sond"
        android:id="@+id/button5"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:layout_marginTop="51dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#839136"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Notofication with attached music + setProgres "
        android:id="@+id/textView8"
        android:layout_alignTop="@+id/button5"
        android:layout_toLeftOf="@+id/button5"
        android:layout_toStartOf="@+id/button5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vibration"
        android:background="#833587"
        android:onClick="showNotofication_vibration"
        android:id="@+id/button6"
        android:layout_above="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#833587"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="with wibration (   long[] vibration = new long[] {500, 1500, 1000 ,1500 ,500})"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Push notfications"
        android:textColor="#0429fa"
        android:textSize="30sp"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button6"
        android:layout_toEndOf="@+id/button6"
        android:onClick="Back_to_the_main"/>


</RelativeLayout>

